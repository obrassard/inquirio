<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.obrassard.inquirio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBRL-StZql-y3WrTrrEX-6vFUDaU-2E5bg" />

        <activity android:name=".LoginHomeActivity" >

        </activity>
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".LoginHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginHomeActivity" />
        </activity>
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".LoginHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginHomeActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MyItemsActivity"
            android:label="@string/title_activity_my_items"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.MainActivity" />
        </activity>
        <activity
            android:name=".ItemsDetailActivity"
            android:label="@string/title_activity_items_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.MainActivity" />
        </activity>
        <activity
            android:name=".AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.MainActivity" />
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:label="@string/title_activity_notifications"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.MainActivity" />
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="@string/title_activity_account"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.MainActivity" />
        </activity>
        <activity
            android:name=".MapDetail"
            android:label="@string/title_activity_map_detail"
            android:parentActivityName=".ItemsDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.ItemsDetailActivity" />
        </activity>
        <activity
            android:name=".ItemFoundActivity"
            android:label="@string/title_activity_item_found"
            android:parentActivityName=".ItemsDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.ItemsDetailActivity" />
        </activity>
        <activity
            android:name=".NotificationDetailsActivity"
            android:label="@string/title_activity_notification_details"
            android:parentActivityName=".NotificationsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.obrassard.inquirio.NotificationsActivity" />
        </activity>
    </application>

